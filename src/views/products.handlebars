
<h1 class="bg-success-subtle p-2 text-center text-success w-100">PRODUCTS</h1>
<section class="d-flex">
  <article id="register" class="w-50">
    <h1 class="text-center">NEW PRODUCT</h1>
    <form class="d-flex flex-column m-5">
      <label for="title">Titulo: </label>
      <input
        class="m-2"
        type="text"
        name="title"
        id="title"
        placeholder="Ingrese el título"
      />
      <label for="photo">Imagen: </label>
      <input
        class="m-2"
        type="text"
        name="photo"
        id="photo"
        placeholder="Ingrese la URL de la imágen"
      />
      <label for="category">Categoría: </label>
      <input
        class="m-2"
        type="text"
        name="category"
        id="category"
        placeholder="Ingrese la categoría"
      />
      <label for="stock">Stock: </label>
      <input
        class="m-2"
        type="number"
        name="stock"
        id="stock"
        placeholder="Ingrese el stock"
      />
      <label for="price">Precio: </label>
      <input
        class="m-2"
        type="number"
        name="price"
        id="price"
        placeholder="Ingrese el precio"
      />

      <input class="btn btn-success"
        style=" width:50%; margin:2rem auto; border-radius:8px;"
        type="button"
        value="CREAR PRODUCTO"
        id="create"
      />

    </form>
  </article>
  <article id="products" class="d-flex flex-wrap w-50"></article>
</section>

<script src="https://cdn.socket.io/4.7.5/socket.io.min.js"></script>
<script src="/scripts/realProducts.js"></script>
